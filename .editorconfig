# https://EditorConfig.org

# top-most EditorConfig file
root = true

# Don't use tabs for indentation.
[*.{cs,c,cpp,h,hpp}]
indent_style = tab
indent_size = tab
tab_width = 4
insert_final_newline = true
charset = utf-8-bom

[*.{yaml,yml}]
indent_style = space
indent_size = 2

# XML project files
[*.{csproj,props,targets}]
indent_style = space
indent_size = 2
